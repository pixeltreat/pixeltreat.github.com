<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Page title -->
<title>{{ title }}</title>

<meta name="description" content="{{ description }}">
<meta name="keywords" content="{{ keywords }}">

<!-- Fav icon -->
<link rel="icon" type="image/x-icon" href="{{assets}}/img/favicon.ico">

<!-- Add to homescreen for Chrome on Android -->
<meta name="mobile-web-app-capable" content="yes">
<link rel="icon" sizes="196x196" href="{{assets}}/img/touch/chrome-touch-icon-196x196.png">

<!-- Add to homescreen for Safari on iOS -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="Member Connect">

<!-- Splash screen for iOS 6 & 7 iPad (retina)-->
<link rel="apple-touch-startup-image" href="{{assets}}/img/touch/apple-touch-startup-image-1536x2008.png" media="(device-width: 768px) and (device-height: 1024px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)" >
<link rel="apple-touch-startup-image" href="{{assets}}/img/touch/apple-touch-startup-image-1496x2048.png" media="(device-width: 768px) and (device-height: 1024px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)">

<!-- Add to homescreen for Safari on iOS device specific -->
<link rel="apple-touch-icon" href="{{assets}}/img/touch/touch-icon-iphone.png">
<link rel="apple-touch-icon" sizes="120x120" href="{{assets}}/img/touch/touch-icon-iphone-retina.png">
<link rel="apple-touch-icon" sizes="76x76" href="{{assets}}/img/touch/touch-icon-ipad-precomposed.png">
<link rel="apple-touch-icon" sizes="152x152" href="{{assets}}/img/touch/touch-icon-ipad-retina-precomposed.png">

<!-- Tile icon for Win8 (144x144 + tile color) -->
<meta name="msapplication-TileImage" content="{{assets}}/img/touch/ms-touch-icon-144x144-precomposed.png">
<meta name="msapplication-TileColor" content="#93d4e0">
